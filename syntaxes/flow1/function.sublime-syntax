hidden: true

scope: ...

variables:
  commonIdentifier: |
    [$_[:alpha:]]
    [$_[:alnum:]]*

  complexType: |
    (
      (?:\?\s*)?
      (?> {{simpleFlowType}}
        | {{flowFunction}}
      )
      (?:\s*{{flowOperators}})?
      (?:\s*\g<-1>)?
    )

  flowFunction: |
    {{parameters}}
    \s*=>

  flowOperators: |
    (?> &(?!&)
      | \|(?!\|)
    )

  genericArguments: |
    (<
      (?> {{string}}
        | \g<-1>
        | [^<>]
      )*
    >)

  parameters: |
    (\(
      (?> {{string}}
        | \g<-1>
        | [^()]
      )*
    \))

  simpleFlowType: |
    (?> {{string}}
      | {{commonIdentifier}}
        {{genericArguments}}?
        (?:\[\s*\])?
    )

  string: |
    (?> '(?:\'|[^'])*?'
      | "(?:\"|[^"])*?"
      | `(?:\`|[^`])*?`
    )

contexts:
  main:
    # Normal.
    - match: |
        (?xi)
        (?=
          {{genericArguments}}?
          {{flowFunction}}
        )
      set: declaration
    # TODO: Check if this syntax is valid.
    # Single parameter (named).
    # - match: |
    #     (?xi)
    #     (?=
    #       {{commonIdentifier}}
    #       \s*:\s*
    #       {{complexType}}
    #       \s*=>
    #     )
    #   set: [
    #     return,
    #     meta-parameters,
    #     simple-parameter
    #   ]
    # Single parameter.
    - match: |
        (?xi)
        (?=
          {{complexType}}
          \s*=>
        )
      set: [
        return,
        meta-parameters,
        optional-tail,
        head
      ]

  declaration:
    # Generic parameters.
    - match: (?=<)
      push: generic-parameters
    # Parameters.
    - match: (?=\()
      set: [
        return,
        parameters
      ]

  generic-parameters:
    - include: Packages/Naomi/syntaxes/flow1/generic/parameters.sublime-syntax

  head:
    - include: Packages/Naomi/syntaxes/flow1/type-expression.sublime-syntax#head

  meta-parameters:
    - meta_scope: meta.function.parameters.flowaaaaaaaaaa
    - match: ""
      pop: true

  optional-tail:
    - include: Packages/Naomi/syntaxes/flow1/type-expression.sublime-syntax#optional-tail

  # Function requires special treatment of the expressions.
  optional-type-expression:
    - include: Packages/Naomi/syntaxes/flow1/optional-type-expression.sublime-syntax
    # - match: (?=[>,;:)\]}])
    #   pop: true
    # - match: (?=\S)
    #   set: [
    #     type-optional-tail,
    #     type-head
    #   ]

  parameters:
    - include: Packages/Naomi/syntaxes/flow1/function/parameters.sublime-syntax

  return:
    - match: =>
      scope: storage.type.function.arrow.flow
      set: optional-type-expression

  simple-parameter:
    - include: Packages/Naomi/syntaxes/flow1/function/parameters/simple.sublime-syntax
