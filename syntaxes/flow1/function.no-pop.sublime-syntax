hidden: true

scope: ...

variables:
  genericArguments: |
    (<
      [^<>]*
      \g<-1>?
      [^<>]*
    >)

  parameters: |
    (\(
      (?> '(?:\'|[^'])*'
        | "(?:\"|[^"])*"
        | `(?:\`|[^`])*`
        | [^'"`()]*
      )
      \g<-1>?
      (?> '(?:\'|[^'])*'
        | "(?:\"|[^"])*"
        | `(?:\`|[^`])*`
        | [^'"`()]*
      )
    \))

  flowFunction: |
    {{parameters}}
    \s*=>

contexts:
  main:
    - match: |
        (?xi)
        (?=
          {{genericArguments}}?
          {{flowFunction}}
        )
      push: declaration

  declaration:
    - include: Packages/Naomi/syntaxes/flow1/function.sublime-syntax#declaration
