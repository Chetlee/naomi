/**
 * The following examples are invalid, but the syntax must try to highlight them
 * as valid to simplify the integration with SASS, SCSS, etc...
 */

.foo {
  color: red;
  .bar { color: blue; }
}

.foo {
  color: red;
  .bar & { color:blue; }
}

.foo {
  color: red;
  &.bar, .baz { color: blue; }
}
